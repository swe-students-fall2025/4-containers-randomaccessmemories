# Example environment variables for the containerized app
# Copy this file to .env and fill in the actual values

# MongoDB connection
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=your_database_name
MONGO_USER=your_username
MONGO_PASSWORD=your_password

# Flask app (web-app)
FLASK_SECRET_KEY=your_flask_secret_key
FLASK_DEBUG=1

# Machine learning client
SENSOR_TYPE=camera  # or microphone, etc.

# Add any other environment variables needed for your project below
