# Example environment variables for the containerized app
# Copy this file to .env and fill in the actual values

# MongoDB Configuration
MONGO_USER=admin
MONGO_PASSWORD=adminpassword
MONGO_DB=audio_notes
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_URI=mongodb://admin:adminpassword@mongodb:27017/audio_notes?authSource=admin

# OpenAI Configuration (optional for now - leave as is)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_STT_MODEL=whisper-1
OPENAI_TEXT_MODEL=gpt-4o-mini

# Processing Configuration
PROCESS_INLINE=false
MAX_FILE_MB=10

# Flask Configuration
FLASK_SECRET_KEY=dev-secret-key-change-in-production-123456
FLASK_DEBUG=1